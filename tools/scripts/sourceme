# This script is sourced from .bashrc!

# Set aliasses for setting up the Xilinx and ModelSim environments.
alias sx="source /home/user/workspace/tools/scripts/sx"
alias sm="source /home/user/workspace/tools/scripts/sm"

# Append the tools bin directory to the path.
export PATH=$PATH:/home/user/workspace/tools/bin

# Set stack limit to unlimited to prevent XST from failing on large designs.
ulimit -s unlimited
